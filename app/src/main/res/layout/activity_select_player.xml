<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SelectPlayer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menu_background"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/select_board">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gomoku"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Multiplayer Online"
            android:id="@+id/play_online_button"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/play_online_button"
            android:layout_gravity="center_horizontal"
            android:background="#00ffa877" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Multiplayer Offline"
            android:id="@+id/play_offline_button"
            android:clickable="true"
            android:layout_below="@+id/play_offline_button"
            android:layout_alignLeft="@+id/play_offline_button"
            android:layout_alignStart="@+id/play_offline_button"
            android:layout_marginTop="44dp"
            android:layout_gravity="center_horizontal"
            android:background="#008affc9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Single Player"
            android:id="@+id/single_player_button"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/single_player_button"
            android:layout_alignLeft="@+id/single_player_button"
            android:layout_alignStart="@+id/single_player_button"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:background="#00fffade" />

    </LinearLayout>
</RelativeLayout>
