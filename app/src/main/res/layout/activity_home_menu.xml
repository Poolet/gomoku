<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menu_background"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/home_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gomoku"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Play"
            android:id="@+id/play_button"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/play_button"
            android:layout_alignLeft="@id/play_button"
            android:layout_gravity="center_horizontal"
            android:background="#00ffa877" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Rules"
            android:id="@+id/rules_button"
            android:clickable="true"
            android:layout_below="@+id/play_button"
            android:layout_alignLeft="@+id/play_button"
            android:layout_alignStart="@+id/play_button"
            android:layout_marginTop="44dp"
            android:layout_gravity="center_horizontal"
            android:background="#008affc9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="Exit"
            android:id="@+id/exit_button"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/settings_button"
            android:layout_alignLeft="@+id/settings_button"
            android:layout_alignStart="@id/action_mode_close_button"
            android:clickable="true"
            android:layout_alignRight="@+id/settings_button"
            android:layout_alignEnd="@+id/settings_button"
            android:layout_gravity="center_horizontal"
            android:background="#00ffffff" />
    </LinearLayout>
</RelativeLayout>
